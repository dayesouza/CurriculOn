<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="studyjam.com.br.java.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="@color/colorTextIcons"
        android:textStyle="bold"
        android:text="Bem vindo(a) ao CurriculOn!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/view_welcome" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/on3"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/view_welcome"
        android:layout_marginTop="20dp"
        android:id="@+id/logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esteja sempre ligado!"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"
        android:textColor="@color/colorLightPrimary"
        android:layout_below="@+id/logo"
        android:id="@+id/fraseSecundaria"
        android:padding="8dp"
        android:textStyle="italic"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerencie seu currÃ­culo"
        android:layout_below="@id/fraseSecundaria"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:onClick="tela_instrucao"
        android:id="@+id/gerenciar"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorTextIcons" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ou"
        android:textStyle="bold"
        android:layout_below="@id/gerenciar"
        android:textSize="25sp"
        android:id="@+id/ou"
        android:layout_centerHorizontal="true"
        android:padding="8dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_in_linkedin"
        android:layout_below="@id/ou"
        android:layout_centerHorizontal="true"
        android:id="@+id/loginlinkedin"/>
</RelativeLayout>
