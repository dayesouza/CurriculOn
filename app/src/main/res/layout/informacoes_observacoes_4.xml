<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informações adicionais"
        android:id="@+id/text_info"
        android:textColor="@color/colorPrimaryText"
        android:textSize="15sp"
        android:padding="8dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conhecimentos:"
        android:textColor="@color/colorPrimary"
        android:padding="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="8dp"
        android:inputType="textMultiLine"
        android:layout_marginLeft="8dp"
        android:id="@+id/conhecimentos"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil:"
        android:textColor="@color/colorPrimary"
        android:padding="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="8dp"
        android:inputType="textMultiLine"
        android:layout_marginLeft="8dp"
        android:id="@+id/perfil"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disponibilidade de horário:"
            android:textColor="@color/colorPrimary"
            android:padding="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/horarios"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Possui carteira de motorista?:"
                android:textColor="@color/colorPrimary"
                android:padding="8dp"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_cnh"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>