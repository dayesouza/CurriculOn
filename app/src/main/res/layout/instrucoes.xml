<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightPrimary"
    android:orientation="vertical"
    android:onClick="avancaInstrucao"
    android:id="@+id/layout_intrucao">
<!-- onclick -->
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Neste aplicativo você gerencia e edita seu curríulo na hora que precisar."
        android:padding="8dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorPrimaryText"
        android:textSize="20dp"
        android:id="@+id/texto_descricao"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/texto_instrucao"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:text="Primeiro, você digita suas informações pessoais:"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/tela_1"
        android:id="@+id/img_tela"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:text="Começar!"
            android:padding="10dp"
            android:id="@+id/botao_comecar"
            android:background="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">
    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:id="@+id/instr_1"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@color/colorPrimaryText"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/instr_2"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@color/colorPrimaryText"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/instr_3"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@color/colorPrimaryText"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/instr_4"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@color/colorPrimaryText"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/instr_5"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>